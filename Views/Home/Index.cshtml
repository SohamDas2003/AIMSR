@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - College Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.05);
        }
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }
        .feature-icon {
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

    <!-- Main Content -->
    <div class="container mt-5">
        <div class="row">
            <!-- Fees Card -->
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/150" class="card-img-top feature-icon mx-auto mt-3" alt="Fees">
                    <div class="card-body">
                        <h5 class="card-title">Fees</h5>
                        <p class="card-text">View and pay your fees online.</p>
                        <a href="#" class="btn btn-primary">Go to Fees</a>
                    </div>
                </div>
            </div>

            <!-- Attendance Card -->
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/150" class="card-img-top feature-icon mx-auto mt-3" alt="Attendance">
                    <div class="card-body">
                        <h5 class="card-title">Attendance</h5>
                        <p class="card-text">Check your attendance records.</p>
                        <a href="#" class="btn btn-primary">Go to Attendance</a>
                    </div>
                </div>
            </div>

            <!-- Profile Card -->
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/150" class="card-img-top feature-icon mx-auto mt-3" alt="Profile">
                    <div class="card-body">
                        <h5 class="card-title">Profile</h5>
                        <p class="card-text">Update and manage your profile.</p>
                        <a href="#" class="btn btn-primary">Go to Profile</a>
                    </div>
                </div>
            </div>

            <!-- Marks Card -->
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/150" class="card-img-top feature-icon mx-auto mt-3" alt="Marks">
                    <div class="card-body">
                        <h5 class="card-title">Marks</h5>
                        <p class="card-text">View your academic marks and results.</p>
                        <a href="#" class="btn btn-primary">Go to Marks</a>
                    </div>
                </div>
            </div>

            <!-- Timetable Card -->
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/150" class="card-img-top feature-icon mx-auto mt-3" alt="Timetable">
                    <div class="card-body">
                        <h5 class="card-title">Timetable</h5>
                        <p class="card-text">Check your class schedule.</p>
                        <a href="#" class="btn btn-primary">Go to Timetable</a>
                    </div>
                </div>
            </div>

            <!-- Library Card -->
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <img src="https://via.placeholder.com/150" class="card-img-top feature-icon mx-auto mt-3" alt="Library">
                    <div class="card-body">
                        <h5 class="card-title">Library</h5>
                        <p class="card-text">Access library resources and books.</p>
                        <a href="#" class="btn btn-primary">Go to Library</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>