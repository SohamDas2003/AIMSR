@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 font-weight-bold">Welcome to AIMSR</h1>
        <p class="lead text-muted">Shaping Future Leaders with Excellence in Education</p>
    </div>

    <!-- Hero Image -->
    <div class="text-center my-4">
        <img src="/images/IMG_0988.png" alt="AIMSR Campus" class="img-fluid rounded shadow">
    </div>

    <!-- About Section -->
    <div class="row mt-5">
        <div class="col-md-6">
            <h2 class="text-primary">Who We Are</h2>
            <p>
                Aditya Institute of Management Studies and Research (AIMSR) is a distinguished B-school located in Mumbai, India.
                We pride ourselves on challenging conventional thinking, fostering innovation, and delivering top-quality education.
            </p>
            <p>
                Our mission is to nurture responsible professionals who are ready to excel in today's dynamic business world.
                At AIMSR, we believe in **integrity, agility, and excellence** as the core pillars of our education system.
            </p>
        </div>
        <div class="col-md-6">
            <img src="~/images/IMG_6100.png" alt="Students Learning" class="img-fluid rounded shadow">
        </div>
    </div>

    <!-- Ranking & Recognition -->
    <div class="bg-light p-4 mt-5 rounded shadow">
        <h2 class="text-center text-success">Our Achievements</h2>
        <p class="text-center">
            <strong>Ranked 4th</strong> among the top private B-Schools in Mumbai (Times B-School Survey 2024).
            Accredited by **NAAC**, ensuring the highest academic standards.
        </p>
    </div>

    <!-- Programs Offered -->
    <div class="mt-5">
        <h2 class="text-center text-dark">Programs We Offer</h2>
        <p class="text-center">Explore our wide range of courses designed for professional growth.</p>

        <div class="row">
            <div class="col-md-3">
                <div class="card shadow p-3 text-center">
                    <h5>Master of Management Studies (MMS)</h5>
                    <p>Advanced business and management skills for future leaders.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow p-3 text-center">
                    <h5>Master of Computer Applications (MCA)</h5>
                    <p>Cutting-edge technology and software development expertise.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow p-3 text-center">
                    <h5>Post Graduate Diploma in Management (PGDM)</h5>
                    <p>Industry-oriented curriculum for business professionals.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow p-3 text-center">
                    <h5>Bachelor of Management Studies (BMS)</h5>
                    <p>Comprehensive undergraduate program in business and management.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="text-center mt-5 bg-dark text-white p-4 rounded">
