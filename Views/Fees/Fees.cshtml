@model AIMSR.Models.Fees

@{
    ViewData["Title"] = "Fees";
}

<div class="container mt-4">
    <h2 class="text-center">Fees Payment</h2>
    <p class="text-center">View and pay your college fees easily.</p>

    @if (Model != null)  // Ensure record exists
    {
        <div class="card mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h5 class="card-title">Fee Details</h5>
                <p><strong>Student Roll No:</strong> @Model.RollNo</p>
                <p><strong>Total Fees:</strong> ₹@Model.TotalFees</p>
                <p><strong>Amount Paid:</strong> ₹@Model.AmountPaid</p>
                <p><strong>Due Amount:</strong> ₹@Model.DueAmount</p>
                <p><strong>Payment Status:</strong> @Model.PaymentStatus</p>
                <p><strong>Payment Date:</strong> @Model.PaymentDate.ToShortDateString()</p>
                <a href="/Fees/Pay" class="btn btn-primary">Pay Now</a>
            </div>
        </div>
    }
    else
    {
        <p class="text-center text-danger">No fee record found.</p>
    }
</div>
