@{
ViewData["Title"] = "Create Role";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0 fs-4">Create New Role</h2>
        </div>
        <div class="card-body">
            <form asp-action="CreateRole" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label for="roleName" class="form-label">Role Name</label>
                    <input type="text" class="form-control" id="roleName" name="roleName" required
                        placeholder="Enter role name (e.g. Admin, Teacher, Student)">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Create Role</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Roles" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i> Back to Roles
        </a>
    </div>
</div>