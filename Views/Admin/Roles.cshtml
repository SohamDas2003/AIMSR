@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

    @{
    ViewData["Title"] = "Role Management";
    }

    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h2 class="mb-0 fs-4">Role Management</h2>
                <a asp-action="CreateRole" class="btn btn-light btn-sm">
                    <i class="bi bi-plus-circle me-1"></i> Create New Role
                </a>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Role Name</th>
                            <th>Role ID</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                        <tr>
                            <td>@role.Name</td>
                            <td><small class="text-muted">@role.Id</small></td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-outline-primary" href="#">Edit</a>
                                    <a class="btn btn-sm btn-outline-danger" href="#">Delete</a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                }
                else
                {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i> No roles have been created yet. Use the "Create New Role"
                    button to add roles.
                </div>
                }
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left me-2"></i> Back to Dashboard
            </a>
        </div>
    </div>