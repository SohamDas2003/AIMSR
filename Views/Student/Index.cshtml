@model AIMSR.Models.StudentViewModel

@{
ViewData["Title"] = "Student Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Student Profile</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <img src="~/images/profilepic.jpg" class="rounded-circle" alt="Profile Picture" width="120"
                            height="120">
                    </div>
                    <h4 class="text-center">@Model.FullName</h4>
                    <p class="text-center text-muted">@Model.Email</p>

                    <hr>

                    <div class="mb-2">
                        <strong>Student ID:</strong> @Model.StudentId
                    </div>
                    <div class="mb-2">
                        <strong>Course:</strong> @Model.Course
                    </div>
                    <div class="mb-2">
                        <strong>Gender:</strong> @Model.Gender
                    </div>
                    <div class="mb-2">
                        <strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("dd-MM-yyyy")
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Quick Links</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="/Attendance" class="btn btn-outline-primary w-100 p-3">
                                <i class="bi bi-calendar-check fs-4 mb-2"></i>
                                <div class="fw-bold">Attendance</div>
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="/Timetable" class="btn btn-outline-primary w-100 p-3">
                                <i class="bi bi-clock fs-4 mb-2"></i>
                                <div class="fw-bold">Timetable</div>
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="/Marks" class="btn btn-outline-primary w-100 p-3">
                                <i class="bi bi-award fs-4 mb-2"></i>
                                <div class="fw-bold">Marks</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Announcements</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3 pb-3 border-bottom">
                        <h6>Upcoming Exam Schedule</h6>
                        <p class="text-muted mb-1">Posted on: March 28, 2025</p>
                        <p>The end semester examination schedule has been released. Please check the exams section for
                            details.</p>
                    </div>
                    <div class="mb-3 pb-3 border-bottom">
                        <h6>Holiday Notice</h6>
                        <p class="text-muted mb-1">Posted on: March 25, 2025</p>
                        <p>The college will remain closed on April 2, 2025 on account of College Foundation Day.</p>
                    </div>
                    <div>
                        <h6>Fee Payment Deadline</h6>
                        <p class="text-muted mb-1">Posted on: March 20, 2025</p>
                        <p>The deadline for semester fee payment is April 10, 2025. Please ensure timely payment to
                            avoid late fee.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        // Any JavaScript for the student dashboard can go here
    });
</script>
}