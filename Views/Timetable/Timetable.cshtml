        color: #666;
    }

    .timetable-table td {
        vertical-align: middle;
        padding: 10px;
        min-width: 150px;
    }

    .highlighted-row {
        box-shadow: 0 0 15px rgba(13, 110, 253, 0.3);
        transform: scale(1.01);
        z-index: 1;
        position: relative;
        transition: all 0.3s ease;
    }

    .day-row {
        transition: all 0.3s ease;
    }

    .fade-row {
        opacity: 0.5;
    }
</style>

@section Scripts {
<script>
    function highlightDay(day) {
        // Reset all rows
        document.querySelectorAll('.day-row').forEach(row => {
            row.classList.remove('highlighted-row');
            row.classList.remove('fade-row');
        });

        // Reset all buttons
        document.querySelectorAll('.btn-primary').forEach(btn => {
            btn.classList.remove('btn-primary');
            btn.classList.add('btn-outline-primary');
        });

        if (day === 'all') {
            // Highlight the 'All Days' button
            document.querySelector('button[onclick="highlightDay(\'all\')"]').classList.remove('btn-outline-primary');
            document.querySelector('button[onclick="highlightDay(\'all\')"]').classList.add('btn-primary');
            return;
        }

        // Highlight selected day and button
        document.querySelector(`tr[data-day="${day}"]`).classList.add('highlighted-row');
        document.querySelectorAll('.day-row').forEach(row => {
            if (row.getAttribute('data-day') !== day) {
                row.classList.add('fade-row');
            }
        });

        document.querySelector(`button[onclick="highlightDay('${day}')"]`).classList.remove('btn-outline-primary');
        document.querySelector(`button[onclick="highlightDay('${day}')"]`).classList.add('btn-primary');
    }
</script>
