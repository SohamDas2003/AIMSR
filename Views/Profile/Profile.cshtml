@model AIMSR.Models.Profile

<div class="container mt-4">
    <h2 class="text-center">Student Profile</h2>

    <div class="card mx-auto mt-4" style="max-width: 500px;">
        <div class="card-body text-center">
            <img src="~/images/profile.jpg" class="rounded-circle mb-3" alt="Profile Picture" width="150">
            <h4 class="card-title">@Model.Name</h4>
            <p class="card-text"><strong>Roll Number:</strong> @Model.RollNo</p>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Course:</strong> @Model.Course</p>
            <p class="card-text"><strong>Year:</strong> @Model.Year</p>
        </div>
    </div>
</div>