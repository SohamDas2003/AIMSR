@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <h2 class="text-center">Student Profile</h2>

    <div class="card mx-auto mt-4" style="max-width: 500px;">
        <div class="card-body text-center">
            <img src="~/images/profile.jpg" class="rounded-circle mb-3" alt="Profile Picture" width="150">
            <h4 class="card-title">@ViewData["StudentName"]</h4>
            <p class="card-text"><strong>Roll Number:</strong> @ViewData["RollNumber"]</p>
            <p class="card-text"><strong>Email:</strong> @ViewData["Email"]</p>
            <p class="card-text"><strong>Course:</strong> @ViewData["Course"]</p>
            <p class="card-text"><strong>Year:</strong> @ViewData["Year"]</p>
            <p class="card-text"><strong>Department:</strong> @ViewData["Department"]</p>
        </div>
    </div>
</div>
